{% extends 'empresario/index.html.twig' %}

{% block title %}Guía Comercial - Ofertas del comercio{% endblock %}

{% block body %}

{{parent()}}

{% if ofertas is not same as("") and ofertas is not null and ofertas is not empty %}
<div class="container h-100 " style="margin-top:40px">
    <table id="tbOferta" class="table table-hover table-sm">
        <thead style="border-bottom-style:2px solid #24a690;">
            <tr>
                {#<th>CIF</th>#}
                <th>Descripción</th>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                {#<th>Imagen</th>#}
                <th style="width:20%"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                    <div class="scrollit">
                            {% for oferta in ofertas %}
                                <tr id ='{{oferta.id}}'>
                                    {#<td>{{oferta.cif}}</td>#}
                                    <td>{{oferta.descripcion}}</td>
                                    <td>{{oferta.fechaInicio | date('d-m-Y  h:m:s')}}</td>
                                    <td>{{oferta.fechaFin | date('d-m-Y  h:m:s')}}</td>
                                    {#<td>{{oferta.imgOferta}}</td>#}
                                    <td style="width:19%" align="center">                                   
                                        <button type="button" class="btn btn-link" onclick="location.href='{{ path('consultarOfertaComercioEmp', {id: oferta.id})}}'"><img height="24px" src="{{ asset('images/about.png') }}" title="Consultar"/></button>
                                    </td> 
                                </tr>
                            {% endfor %}
                    </div>
               </td>
            </tr>
        </tbody>
    </table>
    <button type="button" class="btn btn-default" onclick="location.href='{{path('consultarComercioEmp', {id: id})}}'">Volver</button>
</div>
{% else %}
<div class="container h-100 " style="margin-top:40px">
    <p style="text-align:center">No se ha encontrado ninguna oferta para este comercio</p>
    <button type="button" class="btn btn-default" onclick="location.href='{{path('buscarComercioEmp')}}'">Volver a la lista de Comercios</button>
</div>
{% endif %}

{% endblock %}